						div
							p=item.position
							span=item.name
		.regional-directors
			- var list = [{name: 'Lawrence Chen', position: 'Taiwan Regional Director'}, {name: 'Emily Okamoto', position: 'Japan Regional Director'}, {name: 'John Hall', position: 'Long Beach Regional Director'}, {name: 'Andy Song', position: 'Music School Director'}, {name: 'Nick Kaleikini', position: 'Music School Director'}, {name: 'John "Prime" Hina', position: 'Art School Director'}]
					each item in list
						div
							p=item.position
							span=item.name
