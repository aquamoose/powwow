	span: img(src="img/sp-montana-logo.png")
	span: img(src="img/sp-hawaiian-airline-logo.png")
	span: img(src="img/sp-monster-logo.png")
	span: img(src="img/sp-olukai-logo.png")
	span: img(src="img/sp-eptm-logo.png")
	span: img(src="img/sp-thinkspace-logo.png")
	span: img(src="img/sp-1xrun-logo.png")

block content-title
	h1.content-title pow! wow! directors

block main-content
	.directors-list
		.directors
			- var list = [{name: 'Jasper Wong', position: 'Founder and Lead Director'}, {name: 'Kamea Hadar', position: 'Co-Lead Director'}, {name: 'Jeffrey Gress', position: 'Operations Director'}, {name: 'Michael Inouye', position: 'Documentation Director'}, {name: 'Amy Wong', position: 'Merchandising Director'}, {name: 'JP Kennedy', position: 'Music and Event Coordination'}]
