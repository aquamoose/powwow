		p worldwide sponsors

block sponsor-brand
	span: img(src="img/sp-montana-logo.png")
	span: img(src="img/sp-hawaiian-airline-logo.png")
	span: img(src="img/sp-monster-logo.png")
	span: img(src="img/sp-olukai-logo.png")
	span: img(src="img/sp-eptm-logo.png")
	span: img(src="img/sp-thinkspace-logo.png")
	span: img(src="img/sp-1xrun-logo.png")

block main-content
	.filter-wrap
		.filter-outer-box
			span.filter-label Filter
			.filter-box
				select.cs-select.filter-select.cs-skin-underline
					option(selected, disabled) Choose Type
					- var list = [{position: 'None', value: 'none'}, {position: 'Artist', value: 'artist'}, {position: 'Musicians', value: 'musician'}, {position: 'Partners', value: 'partners'}, {position: 'Photographers', value: 'photographers'}, {position: 'Videographers', value: 'videographers'}, {position: 'Writers', value: 'writers'}]
						each item in list
							option(value=item.value)=item.position
			.filter-box
				select.cs-select.filter-select.cs-skin-underline
					option(selected, disabled) Choose Event
					- var list = [{position: 'None', value: 'none'}, {position: '2010 Hong-kong', value: '2011 hk'}, {position: '2011 Hawaii', value: '2011 hawaii'}, {position: '2012 Hawaii', value: '2012 hawaii'}, {position: '2013 Hawaii', value: '2013 hawaii'}, {position: '2014 Hawaii', value: '2014 hawaii'}, {position: '2014 Taiwan', value: '2014 taiwan'}, {position: '2015 Hawaii', value: '2015 hawaii'}, {position: '2015 Taiwan', value: '2015 taiwan'}, {position: '2015 Japan', value: '2015 japan'}, {position: '2015 Long Beach', value: '2015 long beach'}, {position: '2015 SXSW', value: '2015 sxsw'}, {position: '2016 Antelope Valley', value: '2016 antelope valley'}, {position: '2016 Hawaii', value: '2016 hawaii'}, {position: '2016 Japan', value: '2016 japan'}, {position: '2016 Long Beach', value: '2016 long beach'}, {position: '2016 SXSW', value: '2016 sxsw'}, {position: '2016 Washington DC', value: '2016 washington dc'}, {position: '2016 Worcester', value: '2016 worcester'}, {position: '2017 Hawaii', value: '2017 hawaii'}]
